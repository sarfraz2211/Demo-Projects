<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Shadow color, adjust for darker or lighter shadow -->
            <corners android:radius="1dp" />
            <padding
                android:top="2dp"
                android:bottom="4dp"
                android:left="2dp"
                android:right="2dp" />
        </shape>
    </item>

    <!-- Main Gradient Background Layer -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4E4C4C"
            android:centerColor="#A9A9A9"
            android:endColor="#4E4C4C"
            android:angle="270" /> <!-- Adjust angle as needed (0, 45, 90, etc.) -->
            <corners android:radius="1dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
